pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'mvn clean compile'
            }
        }
        stage('Test') {
             steps {
                echo 'Running Mocha tests...'
                    sh 'npm install'  // Aseg√∫rate de instalar dependencias antes
                sh 'npm test'      // Ejecuta las pruebas
                    }
            post {
              always {
                junit 'test-results.xml' // Si generas un reporte en XML para que Jenkins lo interprete
                }
            }
        }
        }
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t mi-aplicacion:latest .'
            }
        }
        stage('Deploy') {
            steps {
               echo 'Deploying...'
               sh 'scp -r target/*.jar deployuser@127.0.0.1:8080/'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed Exitosamente!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
