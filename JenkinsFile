pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
                sh 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml' 
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh 'docker build -t mi-aplicacion:latest .'
            }
        }
        stage('Deploy') {
            steps {
               echo 'Deploying...'
               sh 'scp -r target/*.jar deployuser@127.0.0.1:8080/'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed Exitosamente!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
